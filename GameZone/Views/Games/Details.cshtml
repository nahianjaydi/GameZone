@model GameZone.Models.Game
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    <li>Price: @Model.Price</li>
    <li>Rent Price: @Model.Rent</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

